<Window x:Class="BDE_MDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDE_MDE"
        mc:Ignorable="d"
        Title="BDE/MDE" ResizeMode="NoResize" Height="768" Width="1024" Icon="logo_small.ico">
    <Grid>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <TextBox Name="tbx_actualTime" Text="Time" Width="120" FontSize="16" TextWrapping="Wrap" IsEnabled="False"/>
            <TextBox Name="tbx_actualUser" Text="User" Width="120" FontSize="16" TextWrapping="Wrap" IsEnabled="False"/>
            <TextBox Name="tbx_sign" Text="Sign" Width="150" FontSize="16" TextWrapping="Wrap" IsEnabled="False"/>
            <TextBox Name="tbx_facility" Text="Facilty" Width="150" FontSize="16" TextWrapping="Wrap" IsEnabled="False"/>

            
            <Button x:Name="btn_logout" Content="Logout" HorizontalAlignment="Left" Margin="180,0,0,0" VerticalAlignment="Top" Width="300" Height="80" Click="btn_login_Click"/>

        </StackPanel>

        <TextBox x:Name="tbx_feedback" HorizontalAlignment="Left" Height="23" Margin="10,706,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="944"/>

        <Frame x:Name="MainFrame" Margin="0,90,0,0"/>
    </Grid>
</Window>
