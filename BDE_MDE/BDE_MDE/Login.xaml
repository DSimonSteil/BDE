<Page x:Class="BDE_MDE.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BDE_MDE"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1024"      
      Title="Login">



    <Grid Background="#FFEEEEEE">
        <StackPanel >
            <TextBlock TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" Margin="0,250,0,0" FontSize="18" FontWeight="Bold" >
                Bitte halten Sie ihren Mitarbeiter-Coin an den RFID-Leser des Terminal!
            </TextBlock>
            <Button x:Name="btn_loginSimulation" Content="Login simulieren" Width="300" Height="100" Margin="0,50,0,0" Click="btn_loginSimulation_Click"/>
            <TextBox Name="tbx_rfidNr" Height="23" TextWrapping="Wrap" Text="" Width="120" Margin="20"/>
            <Button Name="btn_settings" Width="100" Height="100" Background="{x:Null}" Margin="900,50,0,0" BorderThickness="0" Click="btn_settings_Click">
                <Image Source="rüstung.ico">

                </Image>
            </Button>

        </StackPanel>
    </Grid>
</Page>
